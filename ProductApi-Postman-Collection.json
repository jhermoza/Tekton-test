									"pm.test(\"Response has productId\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('productId');",
									"    pm.environment.set(\"productId\", jsonData.productId);",
									"});",
									"",
									"pm.test(\"Response includes discount and finalPrice\", function () {",
									"    var jsonData = pm.response.json();",
									"    pm.expect(jsonData).to.have.property('discount');",
									"    pm.expect(jsonData).to.have.property('finalPrice');",
									"    pm.expect(jsonData.finalPrice).to.be.below(jsonData.price);",
